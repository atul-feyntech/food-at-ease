---
import type { IngredientAnalysis as IngredientAnalysisType, NOVAGroup } from '../../types';

interface Props {
  analysis: IngredientAnalysisType;
  novaGroup: NOVAGroup;
}

const { analysis, novaGroup } = Astro.props;

const novaDescriptions: Record<NOVAGroup, { label: string; color: string }> = {
  1: { label: 'Unprocessed or minimally processed', color: 'bg-green-safe text-white' },
  2: { label: 'Processed culinary ingredients', color: 'bg-green-safe/70 text-white' },
  3: { label: 'Processed foods', color: 'bg-amber-warning text-white' },
  4: { label: 'Ultra-processed foods', color: 'bg-red-critical text-white' },
};
---

<div class="bg-white rounded-xl card-shadow p-5">
  <div class="flex items-center gap-2 mb-4">
    <span class="text-2xl">üî¨</span>
    <h3 class="font-heading text-xl text-mizan-teal font-bold">
      INGREDIENTS KA JAIZA
    </h3>
  </div>

  <!-- Primary Ingredients -->
  <div class="mb-4">
    <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Main Ingredients</h4>
    <div class="flex flex-wrap gap-2">
      {analysis.primary_ingredients.map((ingredient, index) => (
        <span class={`px-3 py-1 rounded-full text-sm ${index === 0 ? 'bg-mizan-teal text-white' : 'bg-gray-100 text-gray-700'}`}>
          #{index + 1} {ingredient}
        </span>
      ))}
    </div>
  </div>

  <!-- Hidden Sugars -->
  {analysis.hidden_sugars.length > 0 && (
    <div class="mb-4 p-3 bg-amber-warning/10 rounded-lg">
      <h4 class="text-sm font-medium text-amber-warning flex items-center gap-1 mb-2">
        <span>üç¨</span> Hidden Sugars Detected
      </h4>
      <div class="flex flex-wrap gap-2">
        {analysis.hidden_sugars.map((sugar) => (
          <span class="px-2 py-1 bg-white rounded text-sm text-gray-700">{sugar}</span>
        ))}
      </div>
    </div>
  )}

  <!-- Additives -->
  {analysis.additives.length > 0 && (
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Additives</h4>
      <div class="space-y-2">
        {analysis.additives.map((additive) => (
          <div class={`p-3 rounded-lg ${
            additive.concern_level === 'avoid' ? 'bg-red-critical/10' :
            additive.concern_level === 'caution' ? 'bg-amber-warning/10' :
            'bg-gray-50'
          }`}>
            <div class="flex items-center justify-between">
              <span class="font-medium text-gray-800">{additive.name}</span>
              <span class="text-xs text-gray-500">{additive.code}</span>
            </div>
            <p class="text-sm text-gray-600 mt-1">{additive.description}</p>
            {additive.banned_in && additive.banned_in.length > 0 && (
              <p class="text-xs text-red-critical mt-1">
                ‚ö†Ô∏è Restricted in: {additive.banned_in.join(', ')}
              </p>
            )}
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Flags -->
  {analysis.flags.length > 0 && (
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Warnings</h4>
      <div class="space-y-2">
        {analysis.flags.map((flag) => (
          <div class={`flex items-start gap-2 p-3 rounded-lg ${
            flag.severity === 'critical' ? 'bg-red-critical/10' :
            flag.severity === 'warning' ? 'bg-amber-warning/10' :
            'bg-gray-50'
          }`}>
            <span class={
              flag.severity === 'critical' ? 'text-red-critical' :
              flag.severity === 'warning' ? 'text-amber-warning' :
              'text-gray-500'
            }>
              {flag.severity === 'critical' ? 'üö®' : flag.severity === 'warning' ? '‚ö†Ô∏è' : '‚ÑπÔ∏è'}
            </span>
            <div>
              <p class="text-sm text-gray-800">{flag.message}</p>
              {flag.message_hindi && (
                <p class="text-xs text-gray-500 mt-0.5">{flag.message_hindi}</p>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Allergens -->
  {analysis.allergens.length > 0 && (
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-500 uppercase tracking-wide mb-2">Allergens</h4>
      <div class="flex flex-wrap gap-2">
        {analysis.allergens.map((allergen) => (
          <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded text-sm">{allergen}</span>
        ))}
      </div>
    </div>
  )}

  <!-- NOVA Group -->
  <div class="pt-4 border-t border-gray-100">
    <div class="flex items-center justify-between">
      <span class="text-sm text-gray-600">NOVA Classification</span>
      <span class={`px-3 py-1 rounded-full text-sm font-medium ${novaDescriptions[novaGroup].color}`}>
        Group {novaGroup}
      </span>
    </div>
    <p class="text-xs text-gray-500 mt-1">{novaDescriptions[novaGroup].label}</p>
  </div>
</div>
